<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_back"
    android:orientation="vertical"
    tools:context=".length_conversion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Enter Value(in Square-meter):"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/input2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Enter_Here..."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp">


        <Button
            android:id="@+id/sq_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Covert to Square millimeter"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic"/>
        <Button
            android:id="@+id/sq_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Covert to Square Centimeter"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic"/>
        <Button
            android:id="@+id/sq_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Covert to Square Kilometer"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic"/>

        <Button
            android:id="@+id/hectare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Covert to Hectare"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic"/>



        <TextView
            android:layout_marginTop="40sp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Result:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/result2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"/>
    </LinearLayout>




</LinearLayout>